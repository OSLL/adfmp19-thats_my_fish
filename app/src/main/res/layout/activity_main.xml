<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_1v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_2v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/nameTextView"
        android:text="HEY\nTHAT'S\nMY\nFISH"
        android:textSize="64dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/main_guideline_1v"
        app:layout_constraintEnd_toEndOf="@+id/main_guideline_2v"
        app:layout_constraintTop_toTopOf="@+id/main_guideline_1"
        app:layout_constraintBottom_toTopOf="@+id/main_guideline_2" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <Button
        android:id="@+id/continueButton"
        android:enabled="false"
        android:text="Continue"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/main_guideline_1v"
        app:layout_constraintEnd_toEndOf="@+id/main_guideline_2v"
        app:layout_constraintTop_toTopOf="@+id/main_guideline_3"
        app:layout_constraintBottom_toTopOf="@+id/main_guideline_4" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <Button
        android:id="@+id/startNewGameButton"
        android:text="New game"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/main_guideline_1v"
        app:layout_constraintEnd_toEndOf="@+id/main_guideline_2v"
        app:layout_constraintTop_toTopOf="@+id/main_guideline_5"
        app:layout_constraintBottom_toTopOf="@+id/main_guideline_6" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <Button
        android:id="@+id/statsButton"
        android:text="Stats"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/main_guideline_1v"
        app:layout_constraintEnd_toEndOf="@+id/main_guideline_2v"
        app:layout_constraintTop_toTopOf="@+id/main_guideline_7"
        app:layout_constraintBottom_toTopOf="@+id/main_guideline_8" />

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>